<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.william.simpletalk.activities.ContactAddActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionBarWithStatusBarSize"
    android:background="@color/colorAccent"
    android:paddingLeft="@dimen/len_10"
    android:paddingRight="@dimen/len_10">
<TextView
    android:id="@+id/txt_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:text="@string/title_cancel"
    android:textAppearance="@style/TextAppearance.AppCompat.Title"
    android:textColor="@color/white"
    android:textSize="@dimen/font_16"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/title_contact_add"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"/>
    <TextView
        android:id="@+id/txt_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/title_send"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        />
</RelativeLayout>
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/len_2"
      android:layout_marginTop="@dimen/len_2"
      android:foreground="@drawable/ic_touch_fg"
      android:paddingBottom="@dimen/len_10"
      android:paddingEnd="@dimen/len_16"
      android:paddingStart="@dimen/len_16"
      android:paddingTop="@dimen/len_10">
      <com.william.common.widget.PortraitView
          android:id="@+id/im_portrait"
          android:layout_width="@dimen/portraitSize"
          android:layout_height="@dimen/portraitSize"
          android:layout_gravity="start|center_vertical"
          android:src="@drawable/default_portrait" />

      <TextView
          android:id="@+id/txt_name"
          android:layout_width="match_parent"
          android:layout_height="@dimen/len_24"
          android:layout_gravity="start"
          android:layout_marginEnd="@dimen/len_60"
          android:layout_marginStart="@dimen/len_52"
          android:ellipsize="end"
          android:gravity="center_vertical"
          android:lines="1"
          android:textAppearance="@style/TextAppearance.AppCompat.Title"
          android:textColor="@color/textPrimary"
          android:textSize="@dimen/fontNameSize"
          tools:text="Mary Harmon" />

      <TextView
          android:id="@+id/txt_desc"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="start"
          android:layout_marginStart="@dimen/len_52"
          android:layout_marginTop="@dimen/len_24"
          android:ellipsize="end"
          android:gravity="center_vertical"
          android:lines="1"
          android:maxLength="32"
          android:textAppearance="@style/TextAppearance.AppCompat.Body1"
          android:textColor="@color/textSecond"
          android:textSize="@dimen/font_12"
          tools:text="Mary Harmon" />
  </FrameLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:text="@string/label_contact_add_confirminfo"
    android:textColor="@color/textSecond"
    android:textSize="@dimen/font_14"/>
    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="64dp" 
        android:layout_marginTop="@dimen/len_10"
        android:background="@drawable/frame_edit"
        android:gravity="center_vertical"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecond"
        android:textCursorDrawable="@drawable/ic_cursor"
        android:textSize="@dimen/font_14"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_10"
        android:background="@drawable/frame_edit">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:text="@string/label_contact_remark"
    android:textSize="@dimen/font_14"
    android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/edit_remark"
            android:layout_width="@dimen/len_172"
            android:layout_height="@dimen/len_32"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/len_32"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecond"
            android:textCursorDrawable="@drawable/ic_cursor"
            android:textSize="@dimen/font_14"
            android:background="@null"/>
        <ImageView
            android:id="@+id/im_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/grey_500"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/delete"/>
    </RelativeLayout>
</LinearLayout>
